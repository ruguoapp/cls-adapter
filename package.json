{
  "name": "@ruguoapp/cls-adapter",
  "version": "0.0.3",
  "description": "Continuation Local Storage made easy",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "compile": "tsc",
    "build": "npm run clean && npm run compile",
    "lint": "tslint --project .",
    "test": "npm run compile",
    "clean": "rm -rf dist",
    "purge": "rm -rf package-lock.json node_modules && npm run clean",
    "prepublishOnly": "npm run build",
    "prettier": "prettier --config .prettierrc --write '**/*'"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruguoapp/cls-adapter.git"
  },
  "dependencies": {
    "@types/cls-hooked": "4.2.1",
    "@types/uuid": "3.4.4",
    "cls-hooked": "4.2.2",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-jike-node": "0.0.17",
    "typescript": "^3.0.3"
  },
  "keywords": [
    "threading",
    "shared",
    "context",
    "middleware"
  ],
  "author": "Joway",
  "engines": {
    "node": ">= 8"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ruguoapp/cls-adapter/issues"
  },
  "homepage": "https://github.com/ruguoapp/cls-adapter#readme"
}
